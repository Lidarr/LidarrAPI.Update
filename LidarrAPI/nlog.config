<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" 
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
      throwExceptions="true">
  <!-- Load the ASP.NET Core plugin -->
  <extensions>
    <add assembly="NLog.Web.AspNetCore"/>
    <add assembly="LidarrAPI" />
  </extensions>

  <!-- the targets to write to -->
  <targets>
    <target xsi:type="ColoredConsole"
            name="ColoredOutput"
            layout="${longdate} ${pad:padding=5:inner=${level:uppercase=true}} ${message} ${exception:format=tostring}"
            useDefaultRowHighlightingRules="true"
            errorStream="false">
    </target>

    <target name="Sentry" type="Sentry" dsn="https://e42826eed07443d6b2e8df62e5e74591:1829b0a86f664c23a69aff6413674352@sentry.io/1193800" />
  </targets>

  <!-- rules to map from logger name to target -->
  <rules>
    <logger name="*" minlevel="Trace" writeTo="ColoredOutput" />
    <logger name="*" appendTo="Sentry" minlevel="Error" />
  </rules>
</nlog>