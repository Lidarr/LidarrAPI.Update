version: '3'
services:
    mysql:
        image: mysql

        environment:
            - MYSQL_ROOT_PASSWORD=root

    lidarrupdate:
        build: .

        ports:
            - "5001:5000"

        links:
            - mysql

        environment:
            - DataDirectory=/data
            - Database="server=mysql;user id=root;password=root;database=lidarrupdate;CharSet=utf8mb4"
            - ApiKey=
            - ASPNETCORE_URLS=http://0.0.0.0:5000

        volumes:
            - ./lidarrupdate-data:/data